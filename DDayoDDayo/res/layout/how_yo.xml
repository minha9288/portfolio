<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent"  >
    
     <ImageView 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:id="@+id/c1" 
    android:src="@drawable/how_yo1" 
    android:visibility="visible"
    />

<ImageView 
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:id="@+id/c2" 
    android:src="@drawable/how_yo2" 
    android:visibility="invisible"
    />
    <ImageView 
        android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/right" 
    	android:layout_marginLeft="550dp"  
    	android:layout_marginTop="150dp" 
    	android:src="@drawable/main_rightbt"/>
    
    <ImageView 
    	android:layout_width="wrap_content" 
   		android:layout_height="wrap_content" 
    	android:id="@+id/left" 
    	android:layout_marginLeft="20dp" 
    	android:layout_marginTop="150dp" 
    	android:src="@drawable/main_leftbt"/>
    <ImageView 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/exit_bt" 
    	android:layout_marginLeft="565dp" 
    	android:layout_marginTop="4dp"
    	android:src="@drawable/main_exitbt" 
    	/>
</RelativeLayout>
