	public int AgeCount(String age1) {
		int age = Integer.parseInt(age1);
		Calendar date = Calendar.getInstance();
		int Age = (date.get(Calendar.YEAR) - age) + 1;
		System.out.println("확인 : " + Age);
		return Age;
	}
	
