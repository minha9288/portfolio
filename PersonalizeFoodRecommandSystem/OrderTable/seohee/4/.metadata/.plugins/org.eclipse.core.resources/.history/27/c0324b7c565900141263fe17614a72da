package thread_test;

import java.io.ObjectInputStream;
import java.net.Socket;

import org.mt4j.MTApplication;

import view.basic;


public class ReadThread extends Thread{
	Socket socket;
	
	String ss;
	
	public ReadThread(Socket socket){
		this.socket = socket;
	}

	public void run(){
		MTApplication app;
		try{
			// 받는곳
			ss = "c";
			ObjectInputStream in = new ObjectInputStream(socket.getInputStream());
			while(true){
				String readstr = "";
				//if(in.readObject()==null)
				readstr = (String) in.readObject();
				if(in.readObject()==null){
					System.out.println("null들어옴");
					break;
				}
				System.out.println("read : " + readstr);
				
				if(readstr.equals("read from Server Client")) {
					ss = "b";
					basic bb = new basic(app, "Multi-Touch Shell Scene");
					bb.test();
				}
				else if(readstr.equals("Client"))
					ss = "a";
			}
		}catch (Exception e) {
			System.out.println("E1: " + e.getMessage());
			e.printStackTrace();
		}finally{
			
		}
	}
	
	public String a() {
		return ss;
	}
}























